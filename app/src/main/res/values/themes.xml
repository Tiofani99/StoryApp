<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>

        <item name="colorOnPrimaryContainer">@color/primary</item>

        <item name="android:windowBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSecondaryContainer">@color/black_60</item>

        <item name="colorTertiary">@color/white</item>
        <item name="colorOnTertiary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.StoryApp" parent="Base.Theme.StoryApp" />

    <style name="EditTextFilledDisable" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_disable_grey_rounded_4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/margin_16</item>
        <item name="android:maxLength">2000</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:autoText">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">flagNoEnterAction</item>
        <item name="android:textSize">@dimen/text_sub_header_14sp</item>
        <item name="android:inputType">textAutoCorrect|textCapSentences|textMultiLine</item>

    </style>

    <style name="EditTextFilledSmallTransparent" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text_rounded_4dp</item>
        <item name="android:padding">@dimen/margin_16</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:autoText">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_sub_header_14sp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="EditTextFilledSmall" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_white_stoke_grey_r4</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/margin_16</item>
        <item name="android:maxLength">2000</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:autoText">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">flagNoEnterAction</item>
        <item name="android:textSize">@dimen/text_sub_header_14sp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>
</resources>